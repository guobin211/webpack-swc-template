{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "emitBOM": false,
    "esModuleInterop": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "newLine": "LF",
    "noEmitOnError": true,
    "pretty": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "stripInternal": true,
    "target": "ES2015",
    "jsx": "react",
    "module": "esnext",
    "useDefineForClassFields": true,
    "declaration": false,
    "rootDir": "src"
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}
