{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "emitBOM": false,
    "esModuleInterop": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "newLine": "LF",
    "noEmitOnError": true,
    "pretty": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "stripInternal": true,
    "target": "esnext",
    "jsx": "react",
    "module": "esnext",
    "declaration": false,
    "rootDir": "./",
    "outDir": "./dist"
  }
}
